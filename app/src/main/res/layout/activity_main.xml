<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light"/>
    <ViewSwitcher android:layout_width="match_parent"
                  android:layout_height="match_parent" android:id="@+id/vs">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/lista">
        </ListView>
        <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/grid" android:numColumns="2"/>

    </ViewSwitcher>


</LinearLayout>

</LinearLayout>